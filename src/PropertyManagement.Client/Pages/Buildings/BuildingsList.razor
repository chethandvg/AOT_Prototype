@page "/buildings"
@using PropertyManagement.Models
@inject HttpClient Http

<PageTitle>Buildings</PageTitle>

<h1>Buildings</h1>

<div class="mb-3">
    <div class="row g-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Search by name, code, or city" @bind="searchText" @bind:event="oninput" />
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="selectedPropertyType">
                <option value="">All Property Types</option>
                @foreach (PropertyType type in Enum.GetValues(typeof(PropertyType)))
                {
                    <option value="@type">@type</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="includeDeleted" @bind="includeDeleted" />
                <label class="form-check-label" for="includeDeleted">
                    Show Deleted
                </label>
            </div>
        </div>
        <div class="col-md-3">
            <a href="/buildings/create" class="btn btn-primary w-100">Create Building</a>
        </div>
    </div>
</div>

@if (buildings == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var building in FilteredBuildings)
        {
            <div class="col">
                <div class="card h-100 @(building.IsDeleted ? "border-danger" : "")">
                    <div class="card-body">
                        <h5 class="card-title">
                            @building.Name
                            @if (building.IsDeleted)
                            {
                                <span class="badge bg-danger">Deleted</span>
                            }
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">@building.Code</h6>
                        <p class="card-text">
                            <strong>Type:</strong> @building.PropertyType<br />
                            <strong>Location:</strong> @building.Address.City, @building.Address.State<br />
                            <strong>Units:</strong> @building.Units.Count
                        </p>
                    </div>
                    <div class="card-footer">
                        <a href="/buildings/@building.Id" class="btn btn-sm btn-primary">View Details</a>
                        <a href="/buildings/@building.Id/units/add" class="btn btn-sm btn-success">Add Unit</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private Building[]? buildings;
    private string searchText = "";
    private string selectedPropertyType = "";
    private bool includeDeleted = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadBuildings();
    }

    private async Task LoadBuildings()
    {
        try
        {
            var query = $"api/buildings?includeDeleted={includeDeleted}";
            buildings = await Http.GetFromJsonAsync<Building[]>(query);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading buildings: {ex.Message}");
            buildings = Array.Empty<Building>();
        }
    }

    private IEnumerable<Building> FilteredBuildings
    {
        get
        {
            if (buildings == null) return Enumerable.Empty<Building>();
            
            var filtered = buildings.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(searchText))
            {
                filtered = filtered.Where(b => 
                    b.Name.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                    b.Code.Contains(searchText, StringComparison.OrdinalIgnoreCase) ||
                    b.Address.City.Contains(searchText, StringComparison.OrdinalIgnoreCase));
            }

            if (!string.IsNullOrWhiteSpace(selectedPropertyType))
            {
                if (Enum.TryParse<PropertyType>(selectedPropertyType, out var type))
                {
                    filtered = filtered.Where(b => b.PropertyType == type);
                }
            }

            return filtered;
        }
    }
}
