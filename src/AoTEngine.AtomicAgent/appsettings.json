{
  "OpenAI": {
    "ApiKey": "",
    "Model": "gpt-4",
    "AssistantId": "",
    "Instructions": "You are an expert C# Architect and Developer. You generate high-quality, well-structured C# code following clean architecture principles. Always define interfaces before implementations. Follow the abstractions-first strategy."
  },
  "Workspace": {
    "RootPath": "./output",
    "EnableSandboxing": true
  },
  "Blackboard": {
    "ManifestFileName": "solution_manifest.json",
    "AutoSave": true,
    "SaveIntervalSeconds": 30
  },
  "Planner": {
    "AbstractionsFirst": true,
    "EnableTopologicalSort": true,
    "MaxRetryOnCircularDependency": 3
  },
  "Clarification": {
    "EnableAmbiguityDetection": true,
    "VagueTermsThreshold": 3,
    "EnableMemoryLookup": true
  },
  "Context": {
    "EnableTieredInjection": true,
    "EnableHotCache": true,
    "CacheSlidingExpirationMinutes": 30,
    "EnableTokenCounting": true,
    "MaxTokens": 128000,
    "TokenGarbageCollectionThreshold": 100000
  },
  "Execution": {
    "MaxRetries": 3,
    "EnableRoslynFeedback": true,
    "AutoFixAttempts": 3,
    "CompilationMode": "Progressive",
    "ValidateAtomically": false,
    "ValidateAfterAllGenerated": true,
    "MaxProgressiveRounds": 3
  },
  "Roslyn": {
    "EnableInMemoryCompilation": true,
    "EnableSemanticExtraction": true,
    "SuppressWarnings": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  }
}
